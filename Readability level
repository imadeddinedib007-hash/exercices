#include <stdio.h>
#include <cs50.h>
#include <ctype.h>
#include <math.h>
int main (void)
{
    string text = get_string("Enter your text to determine it's readability level : ");
    int words=0;
    int sentences=0;
    int letters = 0;
    for (int i=0; text[i]!='\0'; i++){
        if (isalpha(text[i])){
            letters++;
        }
        if (text[i]==' '){
            words++;
        }
        else if (text[i]=='.' || text[i]=='!' || text[i]=='?'){
            sentences++;
        }
    }
    words = words+1;
    float L = ((float)letters/words)*100.0;
    float S = ((float) sentences/words)*100.0;
    int index = round((0.0588*L)-(0.296*S)-15.8);
    if (index>=16){
        printf("Grade 16+\n");
    }
    else if (index<1){
        printf("Before Grade 1\n");
    }
    else printf("Grade %d\n",index);
}
